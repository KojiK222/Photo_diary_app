= render partial: "layouts/header"
%body
  .talkroom__body
    .talkroom__contents
      .talkroom_current-user
        .talkroom__current-user__content
          .talk__current-user
            =link_to user_path(current_user) do
              = attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "talk__current-icon"
          .talkroom__user__name
            =link_to user_path(current_user) do
              = current_user.username
        .send__message
          = form_for @message do |f|
            = f.text_field :content, placeholder: "メッセージを入力" , size: 70, class:"send__message-field"
            = f.hidden_field :talkroom_id, value: @talkroom.id
            = f.submit "投稿",class: 'talk-submit'
      .talkroom__messages
        .talkroom__messages__contents
          - if @messages.present?
            - @messages.each do |m|
              .message__user-icon
                = link_to user_path(m.user) do
                  = attachment_image_tag m.user, :profile_image, fallback: "no-image.png", class: "message-user__image"
              .message__user-text
                = simple_format m.content
              -# .message__time
              -#   = m.created_at.strftime("%Y-%m-%d %H:%M")
      .talkroom__follow-user
        .talkroom__follow-user__contents
          .talk__follow-user__icon
            =link_to user_path(@user) do
              = attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "talk__follow-icon"
          .talk__follow-user__nums
            .talk__follow-user__name
              =link_to user_path(@user) do
                = @user.username
            .talk__follow__follower
              .talk__follow-num
                = link_to "フォロー", follows_user_path(@user.id)
              .talk__follower-num
                = link_to "フォロワー", followers_user_path(@user.id)