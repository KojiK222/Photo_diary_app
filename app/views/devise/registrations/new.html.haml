//新規会員登録ページ

.user__sign__header
  .Photo-diary__text
    = icon('fas', 'camera-retro', class: "icon-camera")
    Photo diary

.SignUp__body
  .SignUp__contents
    .SignUp_form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .registration__contents
          .registration__contents__title
            .Photo__diary Photo diary
            .registration__text に登録する
        
        .registration__message
          写真と文字で思い出を残そう

        .login__facebook
          .sns__icon
            = icon('fab', 'facebook-f', class: "facebook-icon")
          .sns__text
            = link_to "Facabookでログイン", "#", class: "facebook-btn"
          
        .login__twitter
          .sns__icon
            = icon('fab', 'twitter', class: "twitter-icon")
          .sns__text
            = link_to "Twitterでログイン", "#", class: "twitter-btn"

        .Form__field
          = f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "input__field"
        
        .Form__field 
          = f.text_field :fullname, placeholder: "フルネーム", class: "input__field"
        
        .Form__field 
          = f.text_field :username, placeholder: "ユーザーネーム", class: "input__field"

        .Form__field 
          = f.password_field :password, placeholder: "パスワード", autocomplete: "off", class: "input__field"
          -# if @minimum_password_length 
          -#   = @minimum_password_length characters minimum

        -# .Form__field 
        -#   = f.password_field :password, placeholder: "パスワードの確認", autocomplete: "new-password", class: "input__field"

        .actions
          = f.submit "新規会員登録", class: "registration__btn"

    .SignUp__to__login
      .SignUp__to__login__text
        .acount__has
          アカウントはお持ちですか？
          = link_to "ログインする", new_user_session_path , class: "login__text__link"

  -# render "devise/shared/links"
