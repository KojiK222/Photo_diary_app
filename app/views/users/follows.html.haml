= render partial: "layouts/header"
%body
  .cuurrent-user__profile
    .mypage__nav
      = attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "mypage-user__attachment_image"
      .profil__contents
        .user-name__profil-edit
          .user__name
            = current_user.username
          - if current_user.id
            .profil-edit
              = link_to "プロフィール編集", edit_user_path(current_user.id), class: "profil-edit__text"
        .post-follow__numbers
          .post-follow__numbers__nav
            投稿数
          .post-follow__numbers__nav
            フォロー中  人
          .post-follow__numbers__nav
            フォロワー  人
        .profil__text
          = simple_format current_user.profile

  .follows__main
    .follows__contents
      - @users.each do |user|
        - if user.followed_by?(current_user)
          .follows__list
            = link_to user_path(user) do
              .follows__content
                .follows__icon
                  = attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "follows__icon__image"
                .follows__name
                  = user.username
                .follows__text
                  = link_to "フォロー中", user_relationships_path(user.id), method: :delete