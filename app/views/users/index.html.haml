= render partial: "layouts/header"
%body
  .cuurrent-user__profile
    .mypage__nav
      = attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "mypage-user__attachment_image"
      .profil__contents
        .user-name__profil-edit
          .user__name
            = current_user.username
          - if current_user.id
            .profil-edit
              = link_to "プロフィール編集", edit_user_path(current_user.id), class: "profil-edit__text"
        .post-follow__numbers
          .post-follow__numbers__nav
            投稿数
          .post-follow__numbers__nav
            フォロー中  人
          .post-follow__numbers__nav
            フォロワー  人
        .profil__text
          = current_user.profile
  -# %h1 Users#index 
  -# %p Find me in app/views/users/index.html.haml

  .users__main
    .users__contents
      - @users.each do |user|
        %figure.user__profile__image
          = link_to user_path(user) do
            .user__image__name
              = attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "attachment_image"
              .users__name
                = user.username
              .follow__text
